<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
        xmlns:vm="using:TimeTracker.UI.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
        x:Class="TimeTracker.UI.Views.SummaryWindow"
        x:DataType="vm:SummaryViewModel"
        Title="Time Summary"
        Width="900" Height="600"
        WindowStartupLocation="CenterOwner">

    <Design.DataContext>
        <vm:SummaryViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto, *, Auto" Margin="20">
        <!-- Header: Filters -->
        <Border Grid.Row="0" Margin="0,0,0,20" Padding="15" Background="{DynamicResource SystemChromeMediumColor}" CornerRadius="10">
            <StackPanel Orientation="Horizontal" Spacing="20" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="From:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding StartDateOffset}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <TextBlock Text="To:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <DatePicker SelectedDate="{Binding EndDateOffset}"/>
                </StackPanel>

                <Button Command="{Binding LoadDataCommand}" Content="Update" Classes="primary" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Row="1" ColumnDefinitions="*, 20, *">
            
            <!-- Left: Data Grid -->
            <DataGrid Grid.Column="0" ItemsSource="{Binding TaskSummaries}" AutoGenerateColumns="False" IsReadOnly="True" 
                      GridLinesVisibility="All" BorderThickness="1" BorderBrush="Gray" CornerRadius="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task Name" Binding="{Binding Name}" Width="*"/>
                    <DataGridTextColumn Header="Duration" Binding="{Binding Duration}" Width="Auto"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding TotalHours, StringFormat={}{0:F2}}" Width="Auto"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Right: Pie Chart -->
             <Border Grid.Column="2" Background="{DynamicResource SystemChromeLowColor}" CornerRadius="10" Padding="10">
                <lvc:PieChart Series="{Binding Series}" 
                              LegendPosition="Right"
                              Title="{Binding TotalTimeText}"
                              InitialRotation="-90"/>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Margin="0,20,0,0" Padding="10" Background="{DynamicResource SystemChromeMediumColor}" CornerRadius="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                <TextBlock Text="Total Time:" FontWeight="Bold" FontSize="16"/>
                <TextBlock Text="{Binding TotalTimeText}" FontSize="16" FontFamily="Monospace"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
